# Jess' Archive Engine Environment Configuration
# Copy this file to .env and configure your settings

# ============ REQUIRED SETTINGS ============

# URLs to archive (comma-separated list)
# Example: https://soundcloud.com/user1,https://soundcloud.com/user2
URL_LIST=

# ============ OPTIONAL SETTINGS ============

# SoundCloud OAuth token for high quality downloads
# Get this from browser cookies when logged into SoundCloud
# Format: OAuth 2-XXXXXX-XXXXXXXXX-XXXXXXXXXXXX
# Leave empty for standard quality
SOUNDCLOUD_OAUTH=

# Enable high quality downloads (requires valid OAuth token)
# Options: true, false
HIGH_QUALITY_ENABLE=false

# Archive output directory (inside container)
# Default: /archive
# Note: Place a cookies.txt file here for authenticated downloads
OUTPUT_DIR=/archive

# Hours to wait between archive checks
# Default: 6 (check every 6 hours)
# Set to 0 to run once and exit
ARCHIVE_FREQUENCY_HOURS=6

# Enable metadata and thumbnail embedding
# Options: true, false
# Default: true
EMBED_METADATA=true

# Skip the intro logo display
# Options: true, false
# Default: false
SKIP_INTRO=false

# Rate limiting - seconds between requests to avoid being blocked
# Default: 3
# Lower values download faster but may trigger rate limits
RATE_LIMIT_SEC=3

# Debug option to list available formats (advanced users)
# Options: true, false
# Default: false
LIST_FORMATS=false